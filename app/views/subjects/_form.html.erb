<table summary="Subject for fields">
  <tr>
    <th>Name</th>
    <td><%= f.text_field(:name)%></td>
    <td><% @subject.errors.full_messages.each do |message| %>
        <div><%= message %></div>
      <% end %></td>
  </tr>
  <tr>
    <th>Position</th>
    <td><%= f.number_field :position, in: 1..20, step: 1 %></td>
  </tr>
  <tr>
    <th>Visible</th>
    <td><%= f.select :visible, ["true", "false"],selected: "true" %></td>
    <td>
      <%= f.select :visible,
      {
        "Europe" => [ ["Berlin", "BE"], ["Madrid", "MD"] ],
        "North America" => [ ["Chicago", "CHI"] ],
      },
      selected: "Berlin" %>

    </td>
    <td>
      <select name="party[year]" id="party_year">
  <option value="1994">1994</option>
  <option value="1995">1995</option>
  <option value="1996">1996</option>
  <option value="1997">1997</option>
  <option value="1998">1998</option>
  <option value="1999" selected="selected">1999</option>
  <option value="2000">2000</option>
  <option value="2001">2001</option>
  <option value="2002">2002</option>
  <option value="2003">2003</option>
  <option value="2004">2004</option>
</select>

    </td>

  

  </tr>
</table>

